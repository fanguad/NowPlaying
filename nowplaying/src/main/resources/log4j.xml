<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">
	<appender name="CONSOLE" class="org.apache.log4j.ConsoleAppender">
		<param name="Target" value="System.out"/>
		<layout class="org.apache.log4j.PatternLayout">
		<!--<param name="ConversionPattern" value="%-6r [%t] %-5p %c %x - %m%n"/>-->
			<param name="ConversionPattern" value="%-6r %c %x - %m%n"/>
		</layout>
		<!--<filter class="org.apache.log4j.varia.LevelRangeFilter">
			<param name="LevelMin" value="WARN"/>
			<param name="LevelMax" value="ERROR"/>
			<param name="AcceptOnMatch" value="true"/>
		</filter>-->
	</appender>

	<appender name="LOG_FILE" class="org.apache.log4j.FileAppender">
		<param name="file" value="nowplaying.log"/>
		<param name="append" value="false"/>
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%-6r [%t] %-5p %c %x - %m%n"/>
		</layout>
	</appender>

    <appender name="DACP_MESSAGES" class="org.apache.log4j.FileAppender">
        <param name="file" value="dacp_messages.log"/>
        <param name="append" value="false"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%-6r [%t] %-5p %c %x - %m%n"/>
        </layout>
    </appender>

	<!-- standard template for hiding debug-level log statements -->
	<!--
	<logger name="" additivity="false">
		<level value="info"/>
		<appender-ref ref="CONSOLE"/>
		<appender-ref ref="LOG_FILE"/>
	</logger>
	-->

	<logger name="org.nekocode.nowplaying.components.ArtPanel" additivity="false">
		<level value="info"/>
		<appender-ref ref="CONSOLE"/>
		<appender-ref ref="LOG_FILE"/>
	</logger>
	<logger name="org.nekocode.nowplaying.components.ArtPanelProgressLayerUI" additivity="false">
		<level value="info"/>
		<appender-ref ref="CONSOLE"/>
		<appender-ref ref="LOG_FILE"/>
	</logger>
	<logger name="org.nekocode.nowplaying.internals.TrackMonitor" additivity="false">
		<level value="info"/>
		<appender-ref ref="CONSOLE"/>
		<appender-ref ref="LOG_FILE"/>
	</logger>
	<logger name="org.nekocode.nowplaying.components.ResizeUpdateTrack" additivity="false">
		<level value="info"/>
		<appender-ref ref="CONSOLE"/>
		<appender-ref ref="LOG_FILE"/>
	</logger>
	<logger name="org.nekocode.nowplaying.components.swing.NekoFrame" additivity="false">
		<level value="info"/>
		<appender-ref ref="CONSOLE"/>
		<appender-ref ref="LOG_FILE"/>
	</logger>
	<logger name="org.nekocode.nowplaying.tags.TagModel" additivity="false">
		<level value="info"/>
		<appender-ref ref="CONSOLE"/>
		<appender-ref ref="LOG_FILE"/>
	</logger>
	<logger name="org.nekocode.itunes.remote.connection.RequestManager" additivity="false">
		<level value="debug"/>
        <appender-ref ref="DACP_MESSAGES"/>
        <!--<level value="info"/>-->
        <!--<appender-ref ref="CONSOLE"/>-->
        <!--<appender-ref ref="LOG_FILE"/>-->
	</logger>
	<root>
		<level value="debug"/>
		<appender-ref ref="CONSOLE"/>
		<appender-ref ref="LOG_FILE"/>
	</root>
</log4j:configuration>
